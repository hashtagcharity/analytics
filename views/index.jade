extends layout

block content
   
    div(ng-app="hcChart")
        div(ng-controller="ChartCtrl")
            div(class="row col-md-4")
                div(class="col-md-4")          
                    input(type="text", class="form-control",datepicker, ng-model="from",placeholder="From...")
                 div(class="col-md-4")
                    input(type="text", class="form-control",datapicker, ng-model="to",placeholder="To...")
                 div(class="col-md-4")
                    input(type="button",class="btn btn-primary form-control btn-block" value="Go",ng-click="search()")
            div(class="row")
                div(data-ac-chart="'bar'"  data-ac-data="data" data-ac-config="config"  class="chart",style="width:100%;height:700px")

block scripts
    script(type="text/javascript", src="/js/chartApp.js")
